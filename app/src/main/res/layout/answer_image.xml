<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/imageanswer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <TextView
        android:id="@+id/img_naver_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/image_result"
        app:layout_constraintLeft_toRightOf="@id/img_naver_profile"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="profile_name" />

    <LinearLayout
        android:id="@+id/image_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/img_naver_profile"
        app:layout_constraintTop_toBottomOf="@id/img_naver_name">

        <ImageView
            android:id="@+id/image1"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/bottom_line"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:background="@drawable/bottom_line"
            android:padding="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="4dp"
            android:text="이미지 더보기 >"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_naver_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:src="@drawable/ic_naver_icon__59879"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/img_naver_name"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>